<div class='cardDetailPage'>
  <div class="container">
    <div class="cardContents">
      <div class="cardContents_title">
        <div>タイトル</div><br>
        <h2><%= auto_link(simple_format(h(@card.title),html: {target:'_blank'})) %></h2>
      </div>
      <div class="cardContents_memo">
        <div>メモ</div><br>
        <div><%= auto_link(simple_format(h(@card.memo),html: {target:'_blank'})) %></div>
      </div>
      <div class="cardContents_listStatus">
        <div>リスト名</div><br>
        <div><%= @card.list.title %></div>
      </div>
      <div class="cardContents_btnArea">
        <%= link_to '編集する', edit_list_card_path(@card.list, @card), class: "edit_btn" %>
        <%= link_to '削除する', list_card_path(@card.list, @card), class: "text-danger delete_btn", method: :delete %>
      </div>
    </div>
  </div>
</div>