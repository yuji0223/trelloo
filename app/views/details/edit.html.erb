<div class="cardeditPgae">
  <div class='container'>
    <%= form_with model: @detail, url: { action: :update }, html: { class: 'cardeditForm' }, local: true do |f| %>
      <% if @detail.errors.any? %>
        <p class="text-danger">タイトルは1～255文字以内で入力してください</p>
      <% end %>
      <div class="cardeditForm_title">
        <%= f.label 'タイトル' %>
        <%= f.text_field :title, class: "form-control", placeholder: "カード名" %>
      </div>
      <div class="cardeditForm_memo">
        <%= f.label '詳細' %>
        <%= f.text_area :memo, class: "form-control memo", placeholder: "詳細を書いてみよう" %>
      <div class="cardnewForm_memo">
        <%= f.label 'YouTube' %>
        <%= f.text_field :youtube_url, class: "form-control", placeholder: "YouTubeのurlを貼るとみんなに紹介できます！" %>
      </div>
      <div class="text-center"><%= f.submit "更新する", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>